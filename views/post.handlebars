
<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <button class="btn btn-primary" id="myBtn">Comment</button>
  </p>
  <p id="postId">{{id}}</p>
</div>

{{#if comments.length}}
  <div class="text-center">
    <h3>Current Comments:</h3>

    {{#each comments as |comment|}}
    <div class="text-center">
      <div class="text-center">
        <h5 style="margin-bottom: 0">{{comment.content}}</h5>
        <p style="margin-bottom: 20">{{format_date comment.date_created}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}



<!-- The Modal -->
<div id="myModal" class="modal">

  <!-- Modal content -->
  <div class="modal-content text-center">
    <span class="close">&times;</span>
    <form class="new_comment_form">
      <label>Leave a comment:</label><br>
      <input type="text" id="comment" name="comment"><br>
      <input type="submit" id="submit" value="Submit">
    </form>
  </div>

</div>

<script src="/js/comment.js"></script>

